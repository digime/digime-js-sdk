{
  "coverageReporters": [
    "cobertura",
    "lcovonly"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts}",
    "!**/dev/**",
    "!**/certificates/**",
    "!**/dist/**",
    "!**/*.d.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 20,
      "functions": 20,
      "lines": 30,
      "statements": 30
    }
  },
  "transform": {
    ".(ts)": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
  "moduleFileExtensions": [
    "ts",
    "js",
    "json"
  ]
}
