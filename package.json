{
  "name": "digime-js-sdk",
  "version": "0.1.0",
  "description": "digime-js-sdk",
  "main": "dist/main/index.js",
  "typings": "dist/types/index.d.ts",
  "module": "dist/module/index.js",
  "scripts": {
    "build": "npm run clear-dist && npm run build:main && npm run build:module",
    "build:main": "./node_modules/.bin/tsc -p tsconfig.json",
    "build:module": "./node_modules/.bin/tsc -p tsconfig.module.json",
    "clear-dist": "rimraf ./dist",
    "lint": "./node_modules/.bin/tslint \"@(src)/**/*.ts?(x)\"",
    "lint-fix": "npm run lint -- --fix",
    "test": "./node_modules/.bin/jest --coverage --config=jest-config.json",
    "code-statistics": "./node_modules/.bin/sloc src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digime/digime-js-sdk.git"
  },
  "author": "digi.me Limited",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/digime/digime-js-sdk/issues"
  },
  "homepage": "https://github.com/digime/digime-js-sdk#readme",
  "devDependencies": {
    "@types/got": "~8.3.4",
    "@types/jest": "~23.3.5",
    "@types/lodash.isfunction": "~3.0.4",
    "@types/lodash.isinteger": "~4.0.4",
    "@types/lodash.isplainobject": "~4.0.4",
    "@types/lodash.isstring": "~4.0.4",
    "@types/lodash.memoize": "~4.1.4",
    "@types/node": "~10.11.3",
    "@types/node-rsa": "~0.4.3",
    "@types/pkg-dir": "~2.0.0",
    "jest": "~23.0.0",
    "rimraf": "~2.6.2",
    "sloc": "~0.2.0",
    "ts-jest": "~23.10.4",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1"
  },
  "dependencies": {
    "@lifeomic/attempt": "~3.0.0",
    "got": "~9.2.2",
    "lodash.isfunction": "~3.0.9",
    "lodash.isinteger": "~4.0.4",
    "lodash.isplainobject": "~4.0.6",
    "lodash.isstring": "~4.0.1",
    "lodash.memoize": "~4.1.2",
    "node-rsa": "~1.0.1",
    "pkg-dir": "~3.0.0"
  }
}
